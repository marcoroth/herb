{
  "name": "ide-herb",
  "version": "0.8.10",
  "description": "Pulsar/Atom integration for the Herb Language Server â€” HTML+ERB language tools",
  "license": "MIT",
  "main": "lib/main",
  "author": {
    "name": "Marco Roth"
  },
  "homepage": "https://herb-tools.dev",
  "bugs": "https://github.com/marcoroth/herb/issues/new?title=Package%20%60ide-herb%60:%20",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcoroth/herb.git",
    "directory": "javascript/packages/pulsar"
  },
  "keywords": [
    "HTML",
    "Ruby",
    "ERB",
    "LSP",
    "Pulsar",
    "Atom"
  ],
  "engines": {
    "atom": ">= 1.0.0"
  },
  "dependencies": {
    "@herb-tools/language-server": "0.8.10",
    "atom-languageclient": "^1.16.1"
  },
  "enhancedScopes": [
    "text.html.erb",
    "text.html.ruby"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "code-actions": {
      "versions": {
        "0.1.0": "provideCodeActions"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    },
    "code-format.range": {
      "versions": {
        "0.1.0": "provideCodeFormat"
      }
    },
    "code-format.file": {
      "versions": {
        "0.1.0": "provideFileCodeFormat"
      }
    },
    "code-format.on-save": {
      "versions": {
        "0.1.0": "provideOnSaveCodeFormat"
      }
    }
  },
  "configSchema": {
    "serverPath": {
      "title": "Language Server Path",
      "description": "Absolute path to the `herb-language-server` binary. Leave empty to use the bundled version.",
      "type": "string",
      "default": "",
      "order": 1
    },
    "linterEnabled": {
      "title": "Enable Linter",
      "description": "Enable diagnostic linting via the Herb Language Server.",
      "type": "boolean",
      "default": true,
      "order": 2
    },
    "formatterEnabled": {
      "title": "Enable Formatter (Experimental)",
      "description": "Enable document formatting via the Herb Formatter. WARNING: The formatter is experimental and may potentially corrupt files.",
      "type": "boolean",
      "default": false,
      "order": 3
    }
  }
}
