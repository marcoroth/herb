{
  "name": "herb-lsp",
  "displayName": "Herb LSP - HTML+ERB Language Tools",
  "description": "VS Code extension for connecting with the Herb Language Server and Language Tools for HTML+ERB files",
  "version": "0.3.1",
  "private": true,
  "license": "MIT",
  "pricing": "Free",
  "icon": "icon.png",
  "publisher": "marcoroth",
  "author": {
    "name": "Marco Roth"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "HTML",
    "Ruby",
    "ERB"
  ],
  "homepage": "https://herb-tools.dev",
  "bugs": "https://github.com/marcoroth/herb/issues/new?title=Package%20%60@herb-lsp-vscode%60:%20",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoroth/herb.git",
    "directory": "javascript/packages/vscode"
  },
  "sponsor": {
    "url": "http://github.com/sponsors/marcoroth"
  },
  "activationEvents": [
    "onLanguage:erb",
    "onLanguage:html",
    "onCommand:herb.analyzeProject",
    "onCommand:herb.reprocessFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Herb configuration",
      "properties": {
        "languageServerHerb.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "herb.analyzeProject",
        "title": "Herb: Analyze Project",
        "icon": "$(refresh)"
      },
      {
        "command": "herb.reprocessFile",
        "title": "Herb: Re-analyze File",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "herbExplorer",
          "title": "Herb",
          "icon": "assets/herb.svg"
        }
      ]
    },
    "views": {
      "herbExplorer": [
        {
          "id": "herbFileStatus",
          "name": "Project Analysis"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "herb.analyzeProject",
          "when": "view == herbFileStatus",
          "group": "navigation"
        }
      ],
      "view/item/title": [
        {
          "command": "herb.reprocessFile",
          "when": "view == herbFileStatus && viewItem == herbFile",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "publish": "vsce publish",
    "prebuild": "yarn clean",
    "build": "yarn run check-types && yarn run lint && yarn build:language-server && node esbuild.js",
    "build:language-server": "cd ../language-server && yarn build && cd -",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "build-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run build-tests && yarn run build && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "clean": "rimraf dist",
    "prepublishOnly": "yarn clean && yarn build && yarn test"
  },
  "devDependencies": {
    "@herb-tools/node-wasm": "0.3.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.3",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "vscode-languageclient": "^9.0.1"
  }
}
