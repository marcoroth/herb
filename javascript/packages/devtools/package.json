{
  "name": "@herb-tools/devtools",
  "version": "0.5.0",
  "description": "Herb DevTools - Herb HTML+ERB Inspector for browser development",
  "type": "module",
  "license": "MIT",
  "homepage": "https://herb-tools.dev",
  "bugs": "https://github.com/marcoroth/herb/issues/new?title=Package%20%60@herb-tools/devtools%60:%20",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoroth/herb.git",
    "directory": "javascript/packages/devtools"
  },
  "scripts": {
    "build": "yarn clean && yarn build:javascript && yarn build:assets",
    "build:javascript": "rollup -c",
    "build:assets": "cp -r assets/* dist/",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "test": "echo 'DevTools extension tests not implemented yet'",
    "package:firefox": "yarn build && web-ext build --source-dir=dist --artifacts-dir=packages",
    "package:chrome": "yarn build && cd dist && zip -r ../packages/herb-devtools-chrome.zip .",
    "package:all": "yarn package:firefox && yarn package:chrome",
    "run:firefox": "yarn build && web-ext run --source-dir=dist",
    "lint:extension": "web-ext lint --source-dir=dist",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "dependencies": {
    "@herb-tools/core": "0.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/chrome": "^0.1.4",
    "@types/webextension-polyfill": "^0.12.3",
    "esbuild-plugin-copy": "^2.1.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "web-ext": "^8.9.0"
  },
  "files": [
    "package.json",
    "README.md",
    "dist/"
  ]
}
