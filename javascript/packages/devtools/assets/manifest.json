{
  "manifest_version": 3,
  "author": "Marco Roth",
  "homepage_url": "https://herb-tools.dev",
  "name": "Herb DevTools",
  "description": "Herb HTML+ERB Inspector - inspect templates, components, and rendering performance",
  "version": "0.5.0",
  "permissions": [
    "activeTab",
    "devtools",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "herb-devtools@herb-tools.dev"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "devtools_page": "devtools/devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["devtools/*", "injected-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
