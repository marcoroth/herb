{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "erasableSyntaxOnly": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
