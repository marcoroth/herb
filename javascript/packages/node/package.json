{
  "name": "@herb-tools/node",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "gypfile": true,
  "main": "./dist/herb-node.cjs",
  "module": "./dist/herb-node.esm.js",
  "types": "./dist/types/src/index-esm.d.mts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/types/src/index-esm.d.mts",
      "import": "./dist/herb-node.esm.js",
      "require": "./dist/herb-node.cjs",
      "default": "./dist/herb-node.esm.js"
    }
  },
  "scripts": {
    "install": "yarn libherb:vendor && node-pre-gyp install --fallback-to-build",
    "build": "yarn rebuild",
    "build:javascript": "tsc -p tsconfig.json && node bin/build.js",
    "libherb:vendor": "yarn clean && rake templates && cp -r ../../../src ./extension/libherb",
    "rebuild": "yarn clean && yarn libherb:vendor && node-pre-gyp rebuild && yarn build:javascript",
    "configure": "node-pre-gyp configure",
    "package": "node-pre-gyp package",
    "clean": "node-pre-gyp clean && rimraf dist/ && rimraf src/herb/ && rimraf build/",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "prepublishOnly": "yarn build && yarn test"
  },
  "binary": {
    "module_name": "herb",
    "module_path": "./build/{configuration}/{node_abi}-{platform}-{arch}/",
    "remote_path": "{version}",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/marcoroth/herb/releases/download/"
  },
  "dependencies": {
    "@herb-tools/core": "0.0.0",
    "@mapbox/node-pre-gyp": "^2.0.0"
  },
  "devDependencies": {
    "node-addon-api": "^5.1.0",
    "rimraf": "^6.0.1",
    "node-pre-gyp-github": "^2.0.0",
    "vitest": "^3.0.0",
    "typescript": "^5.8.2"
  },
  "files": [
    "package.json",
    "README.md",
    "binding.gyp",
    "dist/",
    "src/",
    "extension/**/*.c",
    "extension/**/*.cpp",
    "extension/**/*.h"
  ]
}
