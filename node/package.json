{
  "name": "@herb-tools/herb",
  "version": "0.0.1",
  "description": "Node.js bindings for Herb",
  "type": "module",
  "main": "dist/node/index.js",
  "browser": "dist/browser/index.js",
  "types": "dist/node/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/browser/index.js",
      "import": "./dist/node/index.js",
      "require": "./dist/node/index.cjs"
    }
  },
  "scripts": {
    "install": "node-gyp rebuild",
    "build": "npm run build:node && npm run build:browser",
    "build:node": "node-gyp rebuild && tsc -p tsconfig.node.json && node bin/build-node.js",
    "build:wasm": "node bin/build-wasm.cjs",
    "build:browser": "npm run build:wasm && tsc -p tsconfig.browser.json && node bin/build-browser.js",
    "clean": "node-gyp clean && rimraf dist",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "vitest run",
    "test:browser": "vitest run --config vitest.browser.config.js",
    "test:watch": "vitest --watch",
    "prepublishOnly": "yarn test"
  },
  "author": "Marco Roth",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "esbuild": "^0.25.0",
    "node-gyp": "^9.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "gypfile": true,
  "files": [
    "lib/",
    "src/",
    "dist/",
    "node/",
    "browser/",
    "binding.gyp",
    "build/Release/",
    "index.ts",
    "index.d.ts",
    "README.md",
    "!**/*.o",
    "!**/build/",
    "!**/.git/"
  ]
}
